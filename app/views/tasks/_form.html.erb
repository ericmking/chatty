<%= form_for @task do |f| %>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :responsible_user_id %>
    <%= f.collection_select(:responsible_user_id, @band.users.all, :id, :email, {include_blank: true}, {class: 'form-control'}) %>
  </div>

  <%= f.submit "Save", class: 'btn btn-success' %>
<% end %>